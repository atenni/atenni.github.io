---
export interface Props {
  title: string;
}

const { title: propsTitle, frontmatter, extraHead } = Astro.props;

// Use Markdown title (via `frontmatter`), otherwise fallback to props title
const title = frontmatter?.title ?? propsTitle ?? "";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="https://fav.farm/ðŸŸ£" />
    <title>{title}</title>
    <slot name="extra-head" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --padding-page: 3vmin;
    --color-bg: hsl(230deg, 100%, 5%);
    --color-text: hsl(230deg, 100%, 70%);
    --color-accent: 124, 58, 237;
    --color-accent-gradient: linear-gradient(
      45deg,
      rgb(var(--color-accent)),
      #da62c4 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: var(--color-bg);
    color: var(--color-text);
    margin: 0;
    padding: 0;
  }
  body {
    margin: 0;
    padding: var(--padding-page);
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>
